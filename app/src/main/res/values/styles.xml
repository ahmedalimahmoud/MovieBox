<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Bacon.Backdrop" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Bacon.CardView.Detail" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
    </style>

    <style name="Theme.Bacon.Metabar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme_content_header</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
    </style>

    <style name="Theme.Bacon.List.CardView" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin</item>
        <item name="android:layout_marginTop">@dimen/cardview_margin</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <style name="Theme.Bacon.Detail.Body" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
    </style>
</resources>
